extends layout
include _includes/sharedHTMLfunction
block content

  .row.banner   
    .col-12     
        h1=pageHeader.title
            small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8 
            each location in locations 
                .card 
                    .card-body
                        h4
                            a(href="/location")= location.name 
                            +outputRating(location.rating)
                            span.badge.rounded-pill.bg-success.float-end= location.distance
                        p.address= location.address
                            .facilities
                                span.badge.bg-warning= facility

        .col-12.col-md-4
            p.lead= sidebar
